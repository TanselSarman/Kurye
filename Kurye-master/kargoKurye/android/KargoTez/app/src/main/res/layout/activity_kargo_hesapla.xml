<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/arkaplan"
    >

    <EditText
        android:id="@+id/edt_karo_genislik"
        android:hint="Kargo Genişliği"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/architects_daughter"
        android:textColor="#FD56D1"/>

    <EditText

        android:id="@+id/edt_kargo_boyu"
        android:hint="Kargo Boyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/architects_daughter"
        android:textColor="#FD56D1"/>

    <EditText

        android:id="@+id/edt_kargo_agirlik"
        android:hint="Kargo Ağırlık"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/architects_daughter"
        android:textColor="#FD56D1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_hesapla"
            android:text="hesapla"
            android:fontFamily="@font/architects_daughter"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_below="@+id/linearLayout" />





    </LinearLayout>

    <TextView
        android:id="@+id/txt_cevap"
        android:hint="cevap"
        android:fontFamily="@font/architects_daughter"
        android:textSize="46dp"
        android:textColor="#FD56D1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>

